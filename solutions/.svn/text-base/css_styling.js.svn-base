// Lab 1
$(document).ready(function() {
	$('.meta').css('font-size', '0.8em');
});

// Lab 2
$(document).ready(function() {
	$('li.status:even').css('background-color', '#efefef');
});

// Lab 3
$(document).ready(function() {
	$('li.status:even').addClass('zebra');
});

// Lab 4
$(function() {
	$('li.status').hover( function() {
		$(this).addClass('zebraOver');
	},function() {
		$(this).removeClass('zebraOver');
	});
});
